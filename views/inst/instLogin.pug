extends ../layout

block content
    .jumbotron
        .h1 #{title}
        if session
            if session.flash
                if session.flash.error
                    .alert.alert-dismissible.alert-danger
                        button.close(type='button', data-dismiss='alert') Ã—
                        strong Oh snap!
                        a #{session.flash.error[0]} Change a few things up
                        |  and try submitting again.
        .container.m-0
            .table
                form.row.m-3.form(action='/inst/sign-in', method='post')
                    .col-lg
                        .h3 Current Institutions:
                    .col-lg.text-center
                        .form-group.row
                            .col-sm-10
                                input#inputUID1.form-control(type='text', placeholder='Name', name='username', required='true')
                        .form-group.row
                            .col-sm-10
                                input#inputPassword1.form-control(type='password', placeholder='Password', name='password', required='true')
                    .col-lg
                        button.btn.btn-primary.btn-lg(type='submit') Login
                    .col-lg.text-center
                .row.m-9
                form.form(action='/inst/sign-up', method='post')
                    .row.m-3
                        .col-lg
                            .h3 New Institutions:
                        .col-lg
                            .form-group.row
                                .col-sm-10
                                    input#inputUID2.form-control(type='text', placeholder='Name', name = 'institutionName', maxlength='45', required='true')
                            .form-group.row
                                .col-sm-10
                                    input#inputPassword2.form-control(type='password', placeholder='Password', name = 'institutionPWD',  maxlength='45', required='true')
                            .form-group.row
                                .col-sm-10
                                    input#inputPassword3.form-control(type='password', placeholder='Confirm Password', name = 'password2', maxlength='45', required='true')
                        .col-lg.text-center
                            .form-group.row
                               .col-md
                                   input#inputAddress.form-control(type='text', placeholder='Address', name = 'institutionStreetAddr', maxlength='45', required='true')
                            .form-group.row
                               .col-sm-8
                                   input#inputZip.form-control(type='text', placeholder='Zipcode', name = 'institutionZipCD', maxlength='5', required='true')
                            .form-group.row
                               .col-sm
                                   input#inputCity.form-control(type='text', placeholder='City', name = 'institutionCity', maxlength='23', required='true')
                               .col-sm
                                   input#inputState.form-control(type='text', placeholder='State', name = 'institutionStateCD', maxlength='2', required='true')
                    .row.m-3
                        .col-lg
                        .col-lg
                            .form-group.row
                                .col-sm-10
                                    input#InstitutionUrl.form-control(type='text', placeholder='URL', name='institutionUrl', maxlength='90', required='true')
                            .form-group.row
                                .col-sm-10
                                    input#InstitutionEmail.form-control(type='email', placeholder='Email', name='institutionEmail', maxlength='45', required='true')
                        .col-lg
                            .form-group.row
                                .col-sm-10
                                    input#InstitutionDesc.form-control(type='text', placeholder='Description', name='institutionDesc', maxlength='140')
                    .row.m-3
                        .col-lg
                        .col-lg
                        .col-lg.text-center
                            button.btn.btn-primary.btn-lg(type='submit') Request To Join